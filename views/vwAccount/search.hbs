<div style="padding: 30px;">
    <div style="font-size: 30px; font-weight: bolder;   border-bottom: 4px solid black; margin-bottom: 40px; padding:10px">Results</div>
    <div style="justify-content: space-around;width: 100%; ">
  <div class="d-flex flex-wrap">
    {{#each courseSearch}}
    <a href="../accounts/courseDetail/{{_id}}" class="{{_id}}">

      <div class="col-2 m-3">
        <div class="card m-2" style="width: 15rem; ">
          <img class="card-img-top" src="/{{image}}" alt="Card image cap">
          <div class="card-body">
            <h4 class="card-title" style="font-size: medium;"><a href="../accounts/courseDetail/{{_id}}"
                title="View Product">{{title}}</a></h4>
            <p class="card-text" style="font-size: small;">{{slug_category}}</p>
            <p class="card-text" style="font-size: small;">{{subtitle}}</p>

            <div class="row">
              <div class="col">

                <p class="btn btn-warning btn-block"><strong>{{price}}</strong></p>
              </div>
              <div class="col">
                <div class="d-flex justify-content-between">
                  <a href="#" class="btn-sm btn-info ">Add to cart</a>
                  <a href="#" class="btn-sm btn-info">Add wishlist</a>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>

    </a>
    {{/each}}
  
  
  </div>
</div>
<div class="father">
    <div class="son">
        <div class="pagination d-flex">
        <a href="#">&laquo;</a>
        <script>
            console.log(parseInt({{totalPage}}))
            for (let j=1;j<=parseInt({{totalPage}});j++)
            {
                document.write(`  
                <div >
                    <a href="?page=${j}" >${j} </a>
                </div>
                `)
            }
        </script>
         <a href="#">&raquo;</a>
    </div>

    </div>
</div>
  

</div>
