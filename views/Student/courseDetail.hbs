<div class="courseDetail">

    <!-- Begin: Course Detail -->
    <section class="course_detail spad">
        <div class="container ">
            <div class="row">
                <!-- Img -->
                <div class="col-md-6 px-0">
                    <img class="img-fluid rounded w-100 h-100" src="/{{course.image}}"
