                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <span>({{course.number_review}} reviews)</span>
                            <span>12,001 students</span>
                        </div>
                        <div class="course__details__price">{{course.price}}</div>
                        <p>{{course.subtitle}}</p>

                        <div class="d-flex">
                            <button href="#" type="button" class="btn btn-warning primary-btn">ADD TO CART</button>
                            <form method="POST" action="/api/students/addWishList">
                                <input type="hidden" name="idUser" value="{{user._id}}">
                                <input type="hidden" name="idCourse" value="{{course._id}}">
                                <button type="submit" class="heart-icon"><span class="bi bi-heart-fill"></span></button>
                            </form>
                           
                        </div>
                        <button href="#" type="button" class="btn btn-outline-success btn-buy">Buy now</button>
                        <hr>

                        <ul>
                            <li><b>Last updated</b>{{course.lastUpdate}}</li>
                            <li><b>Course outline</b>
                                <span>{{course.syllabus}}</span>
                            </li>
                        </ul>

                    </div>

                </div>


